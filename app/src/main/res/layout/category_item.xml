<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="shop"
            type="com.example.skuniv.fleamarket2.viewModel.categoryViewmodel.CategoryShopViewModel"/>

        <variable
            name="command"
            type="com.example.skuniv.fleamarket2.viewModel.categoryViewmodel.CategoryCommand"/>

    </data>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/mapId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="map"
        android:background="#E1BEE7"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:onClick="@{() -> command.mapClickListener(shop)}"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{Integer.toString(shop.no)}"/>

</LinearLayout>
</layout>