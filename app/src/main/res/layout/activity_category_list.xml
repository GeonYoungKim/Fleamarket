<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="categoryModel"
            type="com.example.skuniv.fleamarket2.model.categoryModel.CategoryModel"/>
        <variable
            name="shopsList"
            type="android.databinding.ObservableArrayList&lt;com.example.skuniv.fleamarket2.viewModel.categoryViewmodel.CategoryShopViewModel&gt;"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.categoryView.CategoryListActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{categoryModel.category}"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerId2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:items="@{shopsList}">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</layout>